    <!-- Page Content -->
    <div class="container">

        <div class="row">

          <div class="col-md-3">
              <p class="lead">Book Categories</p>
              <div class="list-group">
                <% @categories.each do |cat| %>
                  <a href="#" class="list-group-item"><%= cat.category %></a>
                  <% end %>
              </div>
          </div>

            <div class="col-md-9">

                <div class="thumbnail">
                    <img class="img-responsive" src="/books2.jpg" alt="">
                    <div class="caption-full">
                        <h4 class="pull-right">$<%= @product.first['price'] %></h4>
                        <h4><a href="#"><%= @product.first['name'] %></a>
                        </h4>
                        <p><%= @product.first['description'] %></p>
                    </div>
                </div>

            </div>

            <div id='purchase-button'><%= link_to "Purchase", new_charge_path, class: 'btn-lg btn-success' %></div>

        </div>

    </div>
    <!-- /.container -->

    <div class="container">

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Your Website 2014</p>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>
