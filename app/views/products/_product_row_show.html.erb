<%= form_for order_item, class: 'form-inline', remote: true do |f| %>
<div class='form-group'>
  <%= f.label "Quantity" %>
  <div><%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %></div>
</div>
<%= f.hidden_field :product_id, value: product['id'] %>
<%= f.hidden_field :product_name, value: product['name'] %>
<%= f.hidden_field :product_price, value: product['price'] %>
<%= f.submit "Add to Cart", class: "btn-lg btn-primary" %>
<% end %>
