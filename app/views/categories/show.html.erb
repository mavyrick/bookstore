<!-- Page Content -->
  <div class="container">

      <div class="row">

        <div class="col-md-3">
            <p class="lead">Book Categories</p>
            <div class="list-group">
              <% @categories.each do |cat| %>
                <%= link_to cat['category'], category_path(cat['id']), class: "list-group-item" %>
                <% end %>
            </div>
        </div>

          <div class="col-md-9">

              <div class="row">

                <% @products.each do |pro| %>

                <% if pro['product_category'] == @category['category'] %>


                <div class="col-sm-4 col-lg-4 col-md-4">
                    <div class="thumbnail">
                        <div class="caption">
                            <h4 class="pull-right">$<%= pro['price'] %></h4>
                            <!-- <h4><a href="#"><%= pro['name'] %></a> -->
                            <h4><%= link_to pro['name'], product_path(pro['id']) %></h4>
                            <div>
                              <h5><%= pro['product_category'] %></h5>
                            </div>
                            <hr>
                            <div><%= render "product_row", product: pro, order_item: @order_item %></div>
                            <!-- <p><%#= pro['description'] %></p> -->
                        </div>
                    </div>
                </div>

                  <% end %>

              <% end %>

              </div>

              <%= paginate(@products) %>

          </div>

      </div>

  </div>
  <!-- /.container -->

  <div class="container">

      <hr>

      <!-- Footer -->
      <footer>
          <div class="row">
              <div class="col-lg-12">
                  <p>Copyright &copy; Josh Sorokin 2017</p>
              </div>
          </div>
      </footer>

  </div>
  <!-- /.container -->

  <!-- jQuery -->
  <script src="js/jquery.js"></script>

  <!-- Bootstrap Core JavaScript -->
  <script src="js/bootstrap.min.js"></script>
